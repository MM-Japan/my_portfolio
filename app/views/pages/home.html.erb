<!-- Featured Projects Section -->
<section id="projects" class="container mt-5">
  <h3 class="text-center">Featured Projects</h2>
  <div class="row justify-content-center">
    <!-- ChoreQuest Card -->
    <div class="col-md-4 mt-3">
      <div class="card mb-4 shadow-sm h-100">
        <img src="<%= asset_path 'chorequest_screenshot.jpg' %>" class="card-img-top img-fluid" alt="ChoreQuest Screenshot" style="max-width: 100%; height: 80%; width: 100%;">
        <div class="card-body d-flex flex-column">
          <h3 class="card-title text-center">ChoreQuest</h3>
          <p class="card-text flex-grow-1 darker-p">ChoreQuest is a web application that gamifies daily chores by turning them into quests that users can complete to earn points and rewards. This project was built using Ruby on Rails, JavaScript, and PostgreSQL.</p>
          <div class="text-center">
            <a href="https://www.chore-quest.com" target="_blank" class="btn btn-primary mt-auto">View ChoreQuest</a>
          </div>
        </div>
      </div>
    </div>

    <!-- FigMax Card -->
    <div class="col-md-4 mt-3">
      <div class="card mb-4 shadow-sm h-100">
        <img src="<%= asset_path 'FigMax (1).png' %>" class="card-img-top" alt="FigMax Screenshot" style="max-width: 100%; height: 100%; width: 100%;">
        <div class="card-body d-flex flex-column">
          <h3 class="card-title text-center">FigMax</h3>
          <p class="card-text flex-grow-1 darker-p">FigMax is a Figma clone built using modern web technologies. It allows users to create and manipulate designs interactively in the browser. The project was built using React, TypeScript, Next.js, and Tailwind CSS, with integration of libraries like Fabric.js for canvas manipulation and Liveblocks for real-time collaboration.</p>
          <div class="text-center">
            <a href="https://figma-clone-flame-one.vercel.app/" target="_blank" class="btn btn-primary mt-auto">View FigMax</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Three.js Portfolio Card -->
    <div class="col-md-4 mt-3">
      <div class="card mb-4 shadow-sm h-100">
        <img src="<%= asset_path 'threejs_portfolio_screenshot.png' %>" class="card-img-top img-fluid" alt="Three.js Portfolio Screenshot" style="max-width: 100%; height: 80%; width: 100%;">
        <div class="card-body d-flex flex-column">
          <h3 class="card-title text-center">Three.js 3D Portfolio</h3>
          <p class="card-text flex-grow-1 darker-p">A 3D interactive portfolio built using Three.js and React. The project was deployed using GitHub Pages.</p>
          <div class="text-center">
            <a href="https://mm-japan.github.io/threejs-react-portfolio/" target="_blank" class="btn btn-primary mt-auto">View 3D Portfolio</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Word Quest Card -->
    <div class="col-md-4 mt-3">
      <div class="card mb-4 shadow-sm h-100">
        <img src="<%= asset_path 'wordquest_screenshot.jpg' %>" class="card-img-top img-fluid" alt="Word Quest Screenshot" style="max-width: 100%; height: auto; width: 100%;">
        <div class="card-body d-flex flex-column">
          <h3 class="card-title text-center">Word Quest</h3>
          <p class="card-text flex-grow-1 darker-p">Word Quest is a fun and challenging word game where you try to find the longest word using a given set of letters. Built with Ruby on Rails and JavaScript.</p>
          <div class="text-center">
            <%= link_to 'Play Word Quest', new_game_path, class: 'btn btn-primary mt-auto' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

